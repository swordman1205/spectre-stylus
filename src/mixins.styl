// Mixins
clearfix() {
  &::after {
    clear: both;
    content: "";
    display: table;
  }
}
toast-variant(color) {
  background: fade(color, 90%);
  border-color: color;
}
label-base() {
  border-radius: .2rem;
  display: inline;
  font-size: 1em;
  padding: .1em .3em;
  vertical-align: baseline;
}
label-variant(color) {
  background: color;
  color: $core-light-color;
}
